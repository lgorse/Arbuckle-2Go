<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_enabled="true"><shape android:shape="rectangle">
            <solid android:color="@color/green" />

            <stroke android:width="1dip" android:color="@color/order_confirm_text" />
        </shape></item>
        
     <item android:state_pressed="true" android:state_enabled="true"><shape android:shape="rectangle">
            <solid android:color="@color/green"/>

            <stroke android:width="1dip" android:color="@color/green" />
        </shape></item>
        
     <item android:state_enabled="false"><shape android:shape="rectangle">
            <solid android:color="@color/order_disabled_buttons"/>

            <stroke android:width="1dip" android:color="@color/green" />
        </shape></item>

</selector>